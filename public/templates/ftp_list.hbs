 <div class="">
     <div>
       <ul class="breadcrumb">
        {{#each dirs}}
            {{#if @first}}<a href='#' class="path" data-name=''><i class="fa fa-home" ></i> </a>{{/if}}
           {{#if @last}}
              <li class="active">{{this}}</li>
           {{else}}
            <li><a href="#" data-name='{{this}}' class="path">{{this}}</a></li>
           {{/if}}
          
        {{/each}}
        
        
      
      </ul>
     </div>
     <div style="margin-bottom:20px;">
       <input type="button" value="Create Directory"  class="btn btn-xs btn-warning mkdir"/> &nbsp;&nbsp;
       <span id="fileselector">
       <form id='uplodadfileform' style="display:inline">
        <label class="btn btn-default btn-xs btn-warning" for="upload-file-selector">
            <input id="upload-file-selector" type="file" name='uploadfile' multiple>
            <i class="fa fa-upload"></i> upload file
        </label>
        <input type='hidden' name='dir' value='{{dir}}'/>
        </form>
    </span>
     </div>
     <div>
        <table class="table striped">
          <thead>
              <th>Name</th>
              <th>Type</th>
              <th>Size</th>
              <th>Group</th>
              <th>Permission</th>
              <th>Mod Time</th>
              <th>Actions </th>
            </tr>
          </thead>
          <tbody>
            {{#each ftpdirlist}}
              <tr>
                <td><span><i class="fa {{#when type 'eq' 'Directory'}} fa-folder {{else}}fa-file-o {{/when}} " aria-hidden="true" style='color:#54b2ef'></i></span> &nbsp; 
                  <a href="#" class="list" data-type="{{#when type 'eq' 'Directory'}}folder{{else}} file{{/when}}" data-name='{{name}}'>{{name}}</a>
               
                 </td>
                <td>{{type}}</td>
                <td>{{size}}</td>
                <td>{{group}}</td>
                <td>{{perm}}</td>
                <td>{{#formattedDate time}}{{/formattedDate}}</td>
                <td>
                
                  <input type='button' class="btn btn-xs action" value="Rename" data-action='rename' data-name='{{name}}'/>

                  {{#when type 'eq' 'File'}}
                    <span><a href='/api/ftp/download?path={{../dir}}&name={{name}}' target='_blank' class="btn btn-xs action" value="Downoad" data-action='download' data-name='{{name}}'>Download </a></span>
                     <span><a href='#' class="btn btn-xs btn-danger delete"   data-name='{{name}}'>Delete </a></span>
                  {{/when}}

                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
     </div>
    

 </div>

 